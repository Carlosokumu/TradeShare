<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarttrader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SmartTrader"
        android:allowBackup="true"
        android:icon="@mipmap/ic_smarttraderlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_smarttraderlogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="com.example.smarttrader.activities.AuthActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.smarttrader.activities.AccountCreation" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.smarttrader.activities.MenuActivity" />
        <activity
            android:name="com.example.smarttrader.activities.Splash"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.smarttrader.activities.MainActivity" />
    </application>

</manifest>