<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end">


    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_left_8"
        android:layout_marginTop="@dimen/margin_left_8"
        android:layout_marginEnd="@dimen/margin_left_8"
        android:layout_marginBottom="@dimen/margin_left_8"
        android:fontFamily="@font/robotolight"
        android:text="Monday,Oct 9.49pm"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_bottom_16"
        android:text="carlos"
        android:textColor="@color/navy_blue"
        tools:text="carlos" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/padd_10"
        android:background="@drawable/light_chat"
        android:padding="@dimen/margin_bottom_16"
        tools:text="I deposited 1k yesterday and my account still reads zero.What could be the issue?" />

    <TextView
        android:id="@+id/txtShortTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginEnd="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_8"
        android:fontFamily="@font/lato"
        android:text="2:00 Pm"
        android:textColor="@color/light_green"
        android:textSize="@dimen/padding_12" />


</RelativeLayout>