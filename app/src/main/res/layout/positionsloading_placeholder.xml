<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loadplaceholder"
    android:background="@color/night"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:id="@+id/linearfirst"
        android:layout_height="wrap_content">

        <View
            android:layout_width="wrap_content"
            android:fontFamily="@font/open"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_margin="20dp"
            android:background="@color/tabcolotransptranstoo"
            android:textSize="@dimen/radius_16"
            android:text="Positions"
            android:layout_height="40dp"/>

        <View
            android:layout_width="wrap_content"
            android:fontFamily="@font/open"
            android:padding="10dp"
            android:id="@+id/txtTotalRisk"
            android:layout_margin="20dp"
            android:background="@color/tabcolotransptranstoo"
            android:layout_height="40dp"/>
        <View
            android:layout_width="wrap_content"
            android:fontFamily="@font/open"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:background="@color/tabcolotransptranstoo"
            android:textAllCaps="true"
            android:layout_height="40dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_marginTop="75dp"
        android:alpha="0.5"
        app:cardBackgroundColor="@color/tabcolotransptranstoo"
        android:padding="@dimen/padd_10"
        android:layout_toRightOf="@+id/linearfirst"
        android:layout_height="75dp">

        <View
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tabcolotransptranstoo"
            />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/text_20"
        android:layout_below="@+id/linearfirst"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/padd_10"
                android:padding="@dimen/padd_10"
                android:background="@color/tabcolotransptranstoo"
                />
            <View
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/padd_10"
                android:padding="@dimen/padd_10"
                android:background="@color/tabcolotransptranstoo"
                />
            <View
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/padd_10"
                android:padding="@dimen/padd_10"
                android:background="@color/tabcolotransptranstoo"
                />
            <View
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/padd_10"
                android:padding="@dimen/padd_10"
                android:background="@color/tabcolotransptranstoo"
                />
            <View
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/padd_10"
                android:padding="@dimen/padd_10"
                android:background="@color/tabcolotransptranstoo"
                />


        </LinearLayout>

    </LinearLayout>








</RelativeLayout>