<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="wrap_content"
        android:text="Monday,Oct 9.49pm"
        android:id="@+id/txtTime"
        android:fontFamily="@font/robotolight"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_left_8"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/message"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/inter_regular"
        android:layout_below="@+id/txtTime"
        tools:text ="I deposited 1k yesterday and my account still reads zero.What could be the issue?"
        android:background="@drawable/light_chat"
        android:padding="@dimen/margin_bottom_16"
        android:layout_margin="@dimen/padd_10"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="2:00 Pm"
        android:id="@+id/shortTime"
        android:textSize="@dimen/padding_12"
        android:textColor="@color/light_green"
        android:fontFamily="@font/lato"
        android:layout_margin="@dimen/padding_8"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message"
        android:layout_height="wrap_content"/>




</RelativeLayout>