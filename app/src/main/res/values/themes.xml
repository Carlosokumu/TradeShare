<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowBackground">@color/trade_share_black</item>
        <item name="windowSplashScreenBackground">@color/trade_share_black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/trade_share_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowSplashScreenBackground">@color/trade_share_black</item>
        <item name="android:windowBackground">@color/trade_share_black</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/trade_share_black</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/trashare_logo</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/SplashTheme</item>

    </style>

</resources>